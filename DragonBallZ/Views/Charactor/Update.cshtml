@model DragonBallZ.Models.ZFighters
<head>
    <link rel="stylesheet" href="~/css/Update.css" asp-append-version="true" />

</head>
<form method="post" asp-action="Update" style="scrollbar-darkshadow-color">
    <input asp-for="ID" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Update Your Details here</h2>
        </div>
        <div class="row">
            <div class="col-12">

                <div class="form-group ">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <label asp-for="Race"></label>@*These names come from our properties in the model *@
                        <input asp-for="Race" class="form-control" />
                        <span asp-validation-for="Race" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <label asp-for="Age"></label>
                        <input asp-for="Age" class="form-control" />
                    </div>
                    <div class="col-4">
                        <label asp-for="Abilities"></label>
                        <input asp-for="Abilities" class="form-control" />
                    </div>
                    <div class="col-4">
                        <label asp-for="Weakness"></label>
                        <input asp-for="Weakness" class="form-control" />
                    </div>

                </div>
               

            </div>
            <div class="form-group row">
                <div class="col-8 offset-2 row">
                    <div class="col">
                        <input type="submit" class="btn btn-info w-75" value="Update" />
                    </div>
                    <div class="col">
                        <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
    </div>
</form>

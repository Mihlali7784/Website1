@model DragonBallZ.Models.ZFighters
<head>
    <link rel="stylesheet" href="~/css/Create.css" asp-append-version="true" />

</head>
<form method="post" asp-action="Create">
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-black-100 pl-3">Add a New Charactor</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group">
                    <div class="col-4">
                        <label asp-for="Name"></label>@*These names come from our properties in the model *@
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <label asp-for="Race"></label>
                        <input asp-for="Race" class="form-control" />
                        <span asp-validation-for="Race" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <label asp-for="Age"></label>
                        <input asp-for="Age" class="form-control" />
                        <span asp-validation-for="Age" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <label asp-for="Abilities"></label>
                        <input asp-for="Abilities" class="form-control" />
                        <span asp-validation-for="Abilities" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <label asp-for="Weakness"></label>
                        <input asp-for="Weakness" class="form-control" />
                    </div>

                </div>
                
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Create"  />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

